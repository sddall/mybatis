<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sdd.mapper.ILeaveMapper">
	<select id="findAllLeave" parameterType="int" resultType="com.sdd.pojo.po.Leave">
		select * from leaveinfo
	</select>
	<select id="findSelfLeave" parameterType="java.lang.String" resultType="com.sdd.pojo.po.Leave">
		select * from leaveinfo where membername=#{username}
	</select>
	<insert id="insertLeave" parameterType="com.sdd.pojo.po.Leave">
		<selectKey keyProperty="lid" resultType="int" order="AFTER">
			select last_insert_id() as lid
		</selectKey>
		insert into leaveinfo (membername,begintime,endtime,day,approval,reason,admin) 
		values (#{membername},#{beginTime},#{endTime},#{day},#{approval},#{reason},#{admin})
	</insert>
	<update id="updateLeave" parameterType="com.sdd.pojo.po.Leave">
		update leaveinfo set approval=#{approval} where lid=#{lid}
	</update>
</mapper>